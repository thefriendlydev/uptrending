html, body, p
  font-family: primaryFont
  font-size: base-font-size
  line-height: base-line-height
  font-weight: base-font-weight
  color: mainText

h1, h2, h3, h4, h5, h6
  font-family: headerFont
  margin: 0

h1
  font-size: 52px
  line-height: 54px
  @media breakpoints.lap.breakpoint
    font-size: 44px
    line-height: 50px
  @media breakpoints.palm.breakpoint
    font-size: 24px
    line-height: 27px

p
  margin: 0

a
  text-decoration: none
  transition: all 0.2s ease-in-out

img
  max-width: 100%
  height: auto

// typekit flicker
.wf-loading *
  visibility: hidden

.wf-active *
  visibility: visible
