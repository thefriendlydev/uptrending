.section.hero
  margin-top: 64px
  position: relative
  padding: 0
  z-index: 1
  @media breakpoints.palm.breakpoint
    margin-top: 0
  .bgImage
    padding: 120px 0
    @media breakpoints.lap.breakpoint
      padding: 80px 0
    @media breakpoints.palm.breakpoint
      padding: 50px 0
  .container
    text-align: center

.hero-tagline
  @extend h1
  color: #FFFFFF
  margin-bottom: 30px

.hero-subTagline
  font-size: 24px
  line-height: 36px
  color: #FFFFFF
  @media breakpoints.lap.breakpoint
    font-size: 18px
    line-height: 30px
  @media breakpoints.palm.breakpoint
    font-size: 14px
    line-height: 18px

.hero-anchorLink
  display: inline-block
  margin-top: 75px
  &:before
    content: "\e900"
    font-family: 'icomoon' !important
    font-size: 10px
    margin-left: 3px
    speak: none
    font-style: normal
    font-weight: normal
    font-variant: normal
    text-transform: none
    line-height: 1
    font-size: 70px
    opacity: 0.1
    color: #000000
