select
  box-sizing: border-box
  -webkit-appearance: none
  -moz-appearance: none
  appearance: none
  border: 1px solid mainText
  padding: 8px 12px
  transition: all 0.2s ease-in-out
  margin: 0
  font-family: primaryFont
  font-size: 14px
  outline: 0
  width: 100%
  color: mainText
  background: #FFFFFF
  box-shadow: none
  background-image: none
  position: relative
  border-radius: 0
  &:focus
    outline: none

input, textarea
  box-sizing: border-box
  -webkit-appearance: none
  border: 1px solid mainText
  padding: 8px 12px
  transition: all 0.2s ease-in-out
  margin: 0
  font-family: primaryFont
  outline: 0
  width: 100%
  color: mainText

input[type=submit]
  width: auto
  height: auto

